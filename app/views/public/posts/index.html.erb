<div class = "row">
  <% if user_signed_in? && !current_user.is_deleted %>
     <%= render 'layouts/users_sidebar' %>
  <% end %>
  <div class = "d-flex justify-content-between">
    <h4 class = "gray field m-3">投稿内容一覧</h4>
  </div>
  <div>
    <table class = "table" >
      <thead class = "table-info">
        <tr>
          <th></th>
          <th>タイトル</th>
          <th>タグ</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |f| %>
        <tr>
          <td><%= image_tag f.get_profile_image(100) %></td>
          <td>
            <%= link_to post_path(f.id) do %>
              <%= f.title %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class = "d-flex justify-content-center">
    <%= paginate @posts %>
  </div>
</div>