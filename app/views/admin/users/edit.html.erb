<div class = "row">
  <div class = "offset-1 col-7">
  <h4>ユーザー編集</h4>
  <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
    <div class = "field my-2 offset-1">
      <table class = "table table-borderless" >
        <tbody>
          <tr>
            <th>ユーザーID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>ユーザー名</th>
            <td><%= f.text_field :name, :placeholder => "ネコハ太郎", autofocus: true, maxlength: "20" %></td>
          </tr>
          <tr>
            <th>性　　別</th>
            <td><%= f.select :sex, User.sexes_i18n.invert %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email, :placeholder => "sample@example.com" %></td>
          </tr>
          <tr>
            <th>自己紹介文</th>
            <td><%= f.text_area :self_introduction, :placeholder => "よろしくお願いいたします。" , size: "50x10" %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td colspan="2">
              <div>
                <%= f.radio_button :is_deleted, false %>
                <%= f.label :is_deleted, '有効' %>
              </div>
              <div>
                <%= f.radio_button :is_deleted, true %>
                <%= f.label :is_deleted, '退会' %>
              </div>
            </td>
          </tr>
          <tr>
            <th></th>
            <td>
              <div class="d-flex justify-content-lg-between">
                <%= f.submit '更新', class:"btn btn-success btn-block" %>
              </div>
            </td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% end %>